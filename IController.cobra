use VariantMvc
use CommonData

extend IController
	def performAction(cmd as String) as Response
		assert this implements IControllerSpec
		assert Utils.isValidCommand(cmd)
		
		ctrl = this to IControllerSpec
		parsed = Utils.parseCommand(cmd)
		lock this
			ctrl.beforeAction(parsed)
			res = ctrl.customAction(parsed)
			ctrl.afterAction(parsed)
			return res


interface IController
	def requestReload
	def requestPartialReload(part as String)
